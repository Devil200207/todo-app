<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- <link rel= "stylesheet" type= "text/css" href=> -->
    <script
      src="https://kit.fontawesome.com/63e49ec91e.js"
      crossorigin="anonymous"
    ></script>
    <meta name="viewport" content="width= device-width, initial-scale=1" />
  </head>

  <body>
    <h1 id="heading">TODO App</h1>
    <hr>
   
    <form action="/create-task" method="POST"
        <section id="section-1">
        <div id="inp">

            <label for="textarea">DESCRIPTION</label>
            <textarea class="f-control" id="textarea" placeholder="What do you need to do?" name="Description"></textarea>

        </div>
        </section>

        <hr>

        <section id="section-2">
            
            <div id="selection_form">

                <select class="form-select" aria-label="Default select example">
                    <option selected>Choose a category</option>
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="School">School</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Other">Other</option>
                </select>

            </div>
 
            <div class="vertical-line"></div>

            <input type="date" id="my_date_picker" placeholder="Due Date" name="Due_Date" class="mb-2">

        </section>

    </form>

    <hr>

    <section id="add-del-but">

        <button type="submit"><i class="fa-solid fa-plus"></i> ADD TASK</button>
        <button type="submit"><i class="fa-solid fa-trash-can"></i> DELETE TASKS</button>

    </section>


    <div>
     
        <% let count = 0; for(let i of task_list){%>
        <hr>

        <div>

            <input type="checkbox" id="<%= i._id%>">
            <label for="<%= i._id%>"><%if(i.Description.length == 0){%>
                <%="No Description Added"%> <%}else{%> <%=i.Description%> <%}%>
            </label>
            
            <div>
                <i class="fa-solid fa-calendar-days"></i>
                <%if(i.due_date == null){%>
                 <%="No Deadline"%> <%}else{%> <%=i.due_date%> <%}%>
            </div>

            <button type="button" class="btn btn-warning"><%=i.Category%></button>

        </div>
        <%count++;%>

    </div>



        

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="jquery-3.6.0.js"></script>
    <!-- <script src=  ></script> -->
  </body>
</html>
